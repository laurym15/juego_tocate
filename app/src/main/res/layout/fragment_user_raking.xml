<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView1_FUR"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView1_FUR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/ayuma2yk"
        android:gravity="center"
        android:minWidth="150sp"
        android:textColor="@color/red_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView1_FUR"
        app:layout_constraintEnd_toStartOf="@+id/textView3_FUR"
        app:layout_constraintStart_toEndOf="@+id/imageView1_FUR"
        app:layout_constraintTop_toTopOf="@+id/imageView1_FUR" />


    <TextView
        android:id="@+id/textView2_FUR"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/greatvibesregular"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3_FUR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3_FUR"
        app:layout_constraintTop_toTopOf="@+id/textView3_FUR" />

    <TextView
        android:id="@+id/textView3_FUR"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/greatvibesregular"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView1_FUR"
        app:layout_constraintEnd_toStartOf="@+id/textView2_FUR"
        app:layout_constraintStart_toEndOf="@+id/textView1_FUR"
        app:layout_constraintTop_toTopOf="@+id/textView1_FUR" />
</androidx.constraintlayout.widget.ConstraintLayout>
